{
    "version": 2,
    "rewrites": [
        {
            "source": "/topic/:id",
            "destination": "/static/topic.html"
        },
        {
            "source": "/post/:id",
            "destination": "/static/topic.html"
        },
        {
            "source": "/user/:id",
            "destination": "/static/topic.html"
        },
        {
            "source": "/user/:id/count",
            "destination": "https://redspacecat.alwaysdata.net/count/:id"
        },
        {
            "source": "/user/:id/first",
            "destination": "https://redspacecat.alwaysdata.net/first/:id"
        },
        {
            "source": "/user/:id/posts",
            "destination": "https://redspacecat.alwaysdata.net/user/:id"
        },
        {
            "source": "/",
            "destination": "/static/home.html"
        },
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ],
    "redirects": [
        {
            "source": "/t/:id",
            "destination": "/topic/:id"
        },
        {
            "source": "/p/:id",
            "destination": "/post/:id"
        },
        {
            "source": "/u/:id",
            "destination": "/user/:id"
        }
    ]
}