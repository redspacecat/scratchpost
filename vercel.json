{
    "version": 2,
    "rewrites": [
        {
            "source": "/topic/:id",
            "destination": "/static/topic.html"
        },
        {
            "source": "/post/:id",
            "destination": "/static/topic.html"
        },
        {
            "source": "/user/:id",
            "destination": "/static/user.html"
        },
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ]
}