{
    "version": 2,
    "rewrites": [
        {
            "source": "/",
            "destination": "/home.html"
        },
        {
            "source": "/users/:user",
            "destination": "/user.html"
        },
        {
            "source": "/search",
            "destination": "/search.html"
        },
        {
            "source": "/search/posts",
            "destination": "/search-results-posts.html"
        },
        {
            "source": "/search/topics",
            "destination": "/search-results-topics.html"
        },
        {
            "source": "/view",
            "destination": "/view.html"
        },
        {
            "source": "/leaderboards",
            "destination": "/leaderboard.html"
        },
        {
            "source": "/changelog",
            "destination": "/changelog.html"
        },
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ],
    "redirects": [
        {
            "source": "/t/:id",
            "destination": "/search/posts?topic=:id"
        },
        {
            "source": "/p/:id",
            "destination": "/search/posts?post=:id"
        },
        {
            "source": "/topics/:id",
            "destination": "/search/posts?topic=:id"
        },
        {
            "source": "/posts/:id",
            "destination": "/search/posts?post=:id"
        },
        {
            "source": "/u/:id",
            "destination": "/users/:id"
        }
    ]
}
